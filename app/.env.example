# Flask Configuration
SESSION_SECRET=your-secret-key-here-change-in-production

# Admin User (REQUIRED - set these to create an admin user)
# Leave blank to skip admin user creation
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Email Configuration (optional - leave empty to simulate in console)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=info@veterinaria.com

# Database (SQLite by default)
DATABASE_URL=sqlite:///veterinaria.db